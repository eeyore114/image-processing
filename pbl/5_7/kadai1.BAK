#include <stdio.h>
#include <stdlib.h>

int main()
{
    int             i, j;
    unsigned char   f[256*256];       /** 原画像用の配列 **/
    unsigned char   g[256*256];       /** トリミング後の画像の配列 **/
    FILE            *fp1 ,*fp2;

    /**原画像ファイル読み込み********************************/
	fp1 = fopen("lenna_uchar_256-256.raw" , "rb");
	fread( f , 1 , 256 * 256 , fp1);
	fclose( fp1 );

    /****************************************************************/


    /**↓↓プログラム作成開始↓↓************************************/
	for(i=0;i<256*256;i++){
			if(f[i] < 127){
				g[i] = 255;
			}
			else
				g[i] = 0;
	}

    /**↑↑プログラム作成終了↑↑************************************/


    /**トリミング画像ファイル書き込み**************************************/
    fp2 = fopen( "kadai1_5_7.raw" , "wb" );
    fwrite( g , 1 , 256 * 256  , fp2 );
    fclose( fp2 );
    /****************************************************************/

    return 0;
}

